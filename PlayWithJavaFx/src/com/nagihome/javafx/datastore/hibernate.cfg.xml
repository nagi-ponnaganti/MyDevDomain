<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/sakila?autoReconnect=true</property>
		<property name="connection.username">sakilaproid</property>
		<property name="connection.password">sakilaproid</property>

		<property name="show_sql">true</property>
		<property name="format_sql">false</property>

		<mapping class="com.nagihome.javafx.datastore.Actor" />

	</session-factory>
</hibernate-configuration>